<% content_for :navbar_links do %>
<%= render 'layouts/basic_navbar/user_links' %>
<% end %>

<%= render "layouts/page_heading", locals = {heading: "Jobs"}%>

<div>

  <% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <div class="container-fluid page-content">
    <div class='row'>

      <div class="gh-form-button change-tag-button change-tag-all col-md-2
      btn btn-default">
      All
    </div>
    <% @tags.each do |tag| %>
    <div class="gh-form-button change-tag-button change-tag-<%= tag.name %> col-md-1
      btn btn-default">
      <%= tag.name %>
    </div>
    <% end %>
  </div>
  <%= render partial: "/jobs/job", collection: @jobs, locals: {type: "index" } %>
</div>

<%= javascript_include_tag "profile" %>
