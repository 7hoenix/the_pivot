<div class="job job-listing-<%= job.title.parameterize %>" style="background: green;">

    <div class="header">
        <%= link_to job.title, job %>
    </div>

    <div class="description">
        <%= job.description %>
    </div>

    <div class="address">
      <%= job.address.full_address if job.address %>
    </div>

    <div class="button">
      <%= job.id %>
      <% #binding.pry %>
      <% if @current_watchlist.watchlist_jobs.include?(job.id.to_s) %>
	<%= button_to "Remove From Watchlist", watchlist_path, { "action" => "delete" } %>
      <% else %>
	<%= button_to "Watch This Job", watchlist_path(job_id: job.id) %> </p>
      <% end %>
    </div>

</div>
