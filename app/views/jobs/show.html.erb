<% content_for :navbar_links do %>
<%= render 'layouts/basic_navbar/user_links' %>
<% end %>

<%= render "layouts/page_heading", locals = {heading: link_to(@job.business.name, business_path(@job.business)) }%>

<div>
  <div class="container">

    <div class="row">
      <h1><%= @job.title %></h1>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h3>Description:</h3>
      </div>
    </div>
    <div class="description row">
      <div class="col-md-10 col-centered">
        <%= @job.description %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h3>Benefits:</h3>
      </div>
    </div>
    <div class="benefits row">
      <div class="col-md-10 col-centered">
        <%= @job.benefits %>
      </div>
    </div>
    <hr><br>
    <div class="row">
      <div class=""><%= link_to "Apply", new_job_request_path(@job), class: "btn btn-default gh-form-button col-md-2 col-centered" %></div>
    </div>


    <% if current_user && current_user.admin? %>

    <div class="status">
      This job is currently: <%= @job.status %>
    </div>

    <div class="edit_button">
      <%= link_to "Edit Item", {controller: "admin/jobs", action: "edit" } , :method => "put"  %>
    </div>

    <% end %>

  </div>
