<% content_for :navbar_links do %>
  <%= render 'layouts/basic_navbar/user_links' %>
<% end %>

<%= render "layouts/page_heading", locals = {heading: "Dashboard: #{current_user.business.name}"}%>

<div class="container-fluid page-content">
  <div class="row">
    <div class="col-md-3">
      <div class="panel-body gh-address-box">
        <div class="row">
          <div class="col-md-12 ">
            <%= link_to image_tag(@presenter.business_image, class: "img-responsive"),
              @presenter.business %>
          </div>
        </div>
        <div class='gh-address-line'><span class='gh-heading-4'>About:</span> <span class="gh-right"><%= @presenter.short_about %></span></div>
        <hr>
          <div class='gh-address-line'><span class='gh-heading-4'>Primary Location:</span> <span class="gh-right"><%= @presenter.address_or_statement %></span></div>
        <hr>
        <%= link_to "Edit Business Information", business_admin_edit_path,
          class: "btn btn-default gh-form-button" %>
      </div>
</div>
    <div class="col-md-6">
      <div class="panel-body gh-main-content">
        <div class="row">
          <div class="col-md-12">
            <div class="joblist">
              <%= link_to "Post New Job", new_business_admin_job_path,  class: "gh-form-button col-md-4 btn btn-default" %>
              <div class="gh-form-button change-status-button change-status-all col-md-2 active
              btn btn-default">
                All
              </div>
              <% @presenter.statuses.each do |status| %>
                <div class="gh-form-button change-status-button change-status-<%= status %> col-md-2
                btn btn-default">
                  <%= status %>
                </div>
              <% end %>
              <br>
              <br>
              <%= render partial: "business_admin/jobs/job", collection: @presenter.jobs, locals: { type: "index" }%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="panel-body gh-main-content">
        <h2>Stats</h2>
        <ul>
          <li>
            <h3>Hired: 1 </h3>
          </li>
          <li>
            <h3>Applicants: 5</h3>
          </li>
        </ul>
      </div>
  </div>
</div>
  </div>

<%= javascript_include_tag "business_dashboard" %>
